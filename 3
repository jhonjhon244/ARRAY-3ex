#include <iostream>
using namespace std;

int main() {
    const int ARRAY_SIZE = 10;
    float valores[ARRAY_SIZE];

    // Lendo 10 valores reais
    cout << "Digite 10 valores reais:" << endl;
    for(int i = 0; i < ARRAY_SIZE; i++) {
        cout << "Valor " << i + 1 << ": ";
        cin >> valores[i];
    }

    // Apresentando os valores na ordem inversa de entrada
    cout << "\nValores na ordem inversa de entrada:" << endl;
    for(int i = ARRAY_SIZE - 1; i >= 0; i--) {
        cout << valores[i] << " ";
    }
    cout << endl;

    return 0;
}
