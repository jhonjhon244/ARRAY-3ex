include <iostream>
using namespace std;

int main() {
    const int tamanho = 5;
    int num[tamanho];
    int soma = 0;

    // Lendo 5 valores inteiros e calculando a soma
    for(int i = 0; i < tamanho; i++) {
        cout << "Digite o valor para a posição " << i + 1 << ": ";
        cin >> num[i];
        soma += num[i];
    }

    // Calculando a média
    double media = static_cast<double>(soma) / tamanho;

    // Apresentando a média
    cout << "A média dos valores é: " << media << endl;

    // Apresentando os valores maiores e menores que a média
    cout << "Valores maiores que a média: ";
    for(int i = 0; i < tamanho; i++) {
        if(num[i] > media) {
            cout << num[i] << " ";
        }
    }
    cout << endl;

    cout << "Valores menores que a média: ";
    for(int i = 0; i < tamanho; i++) {
        if(num[i] < media) {
            cout << num[i] << " ";
        }
    }
    cout << endl;

    return 0;
}
